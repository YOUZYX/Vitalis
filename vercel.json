{
    "version": 2,
    "installCommand": "pnpm install",
    "builds": [
        {
            "src": "packages/frontend/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "packages/backend/api/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "packages/backend/src/**",
                    "packages/backend/prisma/**",
                    "packages/backend/node_modules/.prisma/**",
                    "packages/contracts/deployments.json",
                    "node_modules/.prisma/**",
                    "node_modules/@prisma/client/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "packages/backend/api/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "packages/frontend/$1"
        }
    ]
}
